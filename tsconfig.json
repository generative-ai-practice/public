{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["src/**/*", "scripts/**/*", "types/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts/**/__tests__/**/*",
    "scripts/**/__mocks__/**/*",
    "scripts/**/__fixtures__/**/*"
  ]
}
